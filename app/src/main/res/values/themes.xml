<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.SGPACalculator" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color (already set to light grey) -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <!-- Use dark icons on the light status bar (API 23+) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- ADD THIS: Set system navigation bar color to white (API 21+) -->
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- ADD THIS: Use dark navigation bar buttons on light background (API 27+) -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Ensure app is not fullscreen -->
        <item name="android:windowFullscreen">false</item>

    </style>

</resources>