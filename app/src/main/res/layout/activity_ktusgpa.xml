<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:contentDescription="Back Button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_back"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center_horizontal|top"
                android:text="Please Select a Course:"
                android:textAlignment="center"
                android:textColor="#800000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_computer_science"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/btncourses"
                android:fontFamily="@font/adlam_display"
                android:text="Computer Science and Engineering"
                android:textColor="#C37A0F" />

            <Button
                android:id="@+id/btn_civil"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/btncourses"
                android:fontFamily="@font/adlam_display"
                android:text="Civil Engineering"
                android:textColor="#C37A0F" />

            <Button
                android:id="@+id/btn_ai"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/btncourses"
                android:fontFamily="@font/adlam_display"
                android:text="Artificial Intelligence and Data Science"
                android:textColor="#C37A0F" />

            <Button
                android:id="@+id/btn_mechanical"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/btncourses"
                android:fontFamily="@font/adlam_display"
                android:text="Mechanical Engineering"
                android:textColor="#C37A0F" />

            <Button
                android:id="@+id/btn_ece"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/btncourses"
                android:fontFamily="@font/adlam_display"
                android:text="Electronics and Communication Engineering"
                android:textColor="#C37A0F" />

            <Button
                android:id="@+id/btn_eee"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/btncourses"
                android:fontFamily="@font/adlam_display"
                android:text="Electrical and Electronics Engineering"
                android:textColor="#C37A0F" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/ktusgpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center_horizontal|top"
        android:text="KTU SGPA Calculator"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold|italic" />
</RelativeLayout>