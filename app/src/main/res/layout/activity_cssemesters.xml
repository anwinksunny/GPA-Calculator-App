<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ktusgpa"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center_horizontal|top"
                android:text="Computer Science and Engineering"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center_horizontal|top"
                android:text="Please Select a Semester:"
                android:textAlignment="center"
                android:textColor="#800000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 1"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 2"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 3"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 4"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 5"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 6"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester7"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 7"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semester8"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/btnsems"
                android:fontFamily="@font/adlam_display"
                android:text="Semester 8"
                android:textColor="#EFAD4C"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:contentDescription="Back Button"
        android:elevation="8dp" />
</RelativeLayout>